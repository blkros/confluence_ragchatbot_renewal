# --- LLM(vLLM/OpenAI 호환) ---
OPENAI_API_KEY=local-anything
OPENAI_BASE_URL=http://172.16.10.173:7980/v1
OPENAI_MODEL=Qwen3-30B-A3B-FP8

# --- RAG 인덱싱/경로 ---
INDEX_DIR=faiss_index
UPLOAD_DIR=uploads
DATA_CSV=data/민생.csv
CHUNK_SIZE=800
CHUNK_OVERLAP=120

# 임베딩
EMBEDDING_MODEL=BAAI/bge-m3
EMBEDDING_DEVICE=cpu
E5_USE_PREFIX=0

# (옵션) 리랭커
ENABLE_RERANKER=true
RERANKER_MODEL=BAAI/bge-reranker-base
RERANKER_TOP_N=5

# CORS
CORS_ORIGINS=http://172.16.10.173:3000,http://localhost:3000

# 하이브리드 검색
ENABLE_SPARSE=1
SPARSE_LIMIT=300
SPACE_FILTER_MODE=soft
SPACE_HINT_BONUS=0.25
RETRIEVER_K=10
RETRIEVER_FETCH_K=128
SEARCH_TYPE=mmr
PAGE_FILTER_MODE=hard
PAGE_HINT_BONUS=0.7
TITLE_BONUS=0.35
STICKY_AFTER_MCP=true
ALLOW_PDF_CONTEXT=1

# 링크/보안
ALLOWED_SOURCE_HOSTS=confluence.nuriflex.co.kr
CONFLUENCE_BASE_URL=https://confluence.nuriflex.co.kr

# MCP
MCP_URL=http://mcp-confluence:9000/sse?version=2025-06-18
MCP_PROTOCOL_VERSION=2025-06-18
CONFLUENCE_MCP_TOOL=search_pages

# 기타
MCP_TIMEOUT=5
SEARCH_LANGS=ko,en
REPLY_LANG=ko
